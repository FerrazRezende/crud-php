{% extends 'base/base.html.twig' %}
{% block content %}
{% include 'partials/header.html.twig' %}

<article class="container">
    <table role="grid">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">First name</th>
                <th scope="col">Last name</th>
                <th scope="col">E-mail</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <th scope="row">{{ client.id }}</th>
                <td>{{ client.firstName }}</td>
                <td>{{ client.lastName }}</td>
                <td>{{ client.email }}</td>
                <td>
                    <a class="see" data-tooltip="Read"><i class="iconoir-doc-magnifying-glass-in"></i></a>
                    <a class="edit" data-tooltip="Edit"><i class="iconoir-page-edit"></i></a>
                    <a class="del" data-tooltip="Delete" data-delete-url="{{ path('delete', {'id': client.id}) }}"><i class="iconoir-multiple-pages-xmark"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</article>
{% include 'modals/delete.html.twig' %}
{% include 'modals/update.html.twig' %}
{% endblock %}